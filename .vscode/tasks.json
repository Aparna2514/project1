{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All CPP Files",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Iinclude",             // Include header files from include/
        "src/*.cpp",             // Compile all .cpp files
        "-o",
        "app.exe"                // Output file
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile all C++ source files in src/ directory"
    }
  ]
}
